<div class="row">
  <div class="col s10 m6 offset-s1 offset-m3">
    <h2>Sign Up</h2>
    <form action="/auth/signup" method="POST">

      <div class="form-group">
        <label for="authFirstName">First Name</label>
        <input id="authFirstName" class="form-control" type="text" name="firstName">
      </div>

      <div class="form-group">
        <label for="authLastName">Last Name</label>
        <input id="authLastName" class="form-control" type="text" name="lastName">
      </div>

      <div class="form-group">
        <label for="authEmail">Email</label>
        <input id="authEmail" class="form-control" type="email" name="email">
      </div>

      <div class="form-group">
        <label for="authPassword">Password</label>
        <input id="authPassword" class="form-control" type="password" name="password">
      </div>

      <input class="waves-effect waves-light btn" type="submit">
      <a href="/auth/" class="waves-effect waves-light btn">Back</a>
    </form>
  </div>
</div>
